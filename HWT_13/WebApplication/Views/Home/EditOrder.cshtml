@using WebApplication.Models
@model EditOrderViewModel
<div class="modal-content">
    <div class="modal-header">
        <button class="close" data-dismiss="modal" area-hidden="true">X</button>
        <h4>@ViewData["ModalDialogHead"]</h4>
    </div>
    <div class="modal-body">
        @using (Html.BeginForm("EditOrder", "Home", FormMethod.Post, new {role = "form", id="editForm"}))
        {
            @Html.HiddenFor(m=>m.OrderID);
            @Html.HiddenFor(m=>m.CustomerID);
            <div class="form-group">
                @Html.Label("Название компании",new {@for="CompanyName"})
                @Html.EditorFor(m => m.CompanyName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m=>m.CompanyName)
            </div>
            <div class="form-group">
                @Html.Label("Контактный телефон",new {@for="Phone"})
                @Html.EditorFor(m=>m.Phone,new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Phone)
            </div>
            <div class="form-group">
                @Html.Label("Адрес доставки",new {@for="ShipAddress"})
                @Html.EditorFor(m => m.ShipAddress, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.ShipAddress)
            </div>
            <div class="form-group">
                @Html.Label("Город",new {@for= "ShipCity" })
                @Html.EditorFor(m => m.ShipCity, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.ShipCity)
            </div>
            <div class="form-group">
                @Html.Label("Страна",new {@for= "ShipCountry" })
                @Html.EditorFor(m => m.ShipCountry, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.ShipCountry)
            </div>
        }
    </div>
    <div class="modal-footer">
        <button class="btn btn-default" data-dismiss="modal">Отмена</button>   
        <button type="submit" class="btn btn-primary" form="editForm">@ViewData["ModalBtnSubmit"]</button>    
    </div>
</div>


@Scripts.Render("~/bundles/jqueryval")