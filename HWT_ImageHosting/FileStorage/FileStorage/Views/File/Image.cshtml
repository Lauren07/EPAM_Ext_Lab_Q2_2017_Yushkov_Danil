@using FileStorage.Helpers
@model FileStorage.Models.ImageDetailsViewModel
@Styles.Render("~/Content/imageDisplay.css")
@{
    ViewBag.Title = "Image";
}


<ul class="list-inline">
<li>

        <h2>@Model.Name</h2>

</li>
<li>

    <div class="dropdown dropdown-settings">
        <a data-toggle="dropdown"><span class="glyphicon glyphicon-cog"></span></a>
        <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
            @Html.LinkInnerHtml(Model.ImageSource, new { download = @Model.Name+".jpg" }, "<span class=\"glyphicon glyphicon-save\"></span>" ,"li")
            @Html.ActionLinkInnerHtml("EditFile", "File", new {fileId = @Model.Id}, new {@class = "modal-btn"}, "<span class=\"glyphicon glyphicon-pencil\"></span>"
                , "li")
            @Html.ActionLinkInnerHtml("ConfirmDelete", "File", new {imgId = @Model.Id}, new {@class = "modal-btn"}, "<span class=\"glyphicon glyphicon-trash\"></span>"
                , "li")
        </ul>
    </div>

</li>
</ul>



<div class="row">
    <div class="col-md-12">
        <div class="thumbnail">
            <img src="@Model.ImageSource" />
        </div>
    </div>
</div>
<div class="panel panel-default information-panel">
    <div class="panel-heading">
        <h3 class="panel-title">
            Информация
        </h3>
    </div>
    <div class="panel-body">
        <table class="table table-bordered">
            <tr>
                <td class="nameAttr">Добавлено пользователем:</td>
                <td>@Model.UserName</td>
            </tr>
            <tr>
                <td class="nameAttr">Дата создания:</td>
                <td>@Model.CreatedDate</td>
            </tr>
            <tr>
                <td class="nameAttr">Описание:</td>
                <td>@Model.Description</td>
            </tr>
        </table>
    </div>
</div>
